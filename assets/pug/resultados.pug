extends partials/layout

block content

  section.cmsuniversidad-publicidad.d-none.d-sm-block
    .container.text-center
      a(href="http://www.camersur.com", target="_blank")
        img(src="images/Banner5.png", alt="Banner publicitario", class="img-fluid")

  section.resultados.my-5
    .container
      h1.cms-titulo.cms-titulo--amarillo.d-flex.flex-column TÉRMINO BUSCADO
        span.resultados__cantidad 5 RESULTADOS PARA LA BÚSQUEDA DE

      .resultado__listado
        article.resultados__item
          .resultados__info
            img.resultados__img(src="images/imagen-proximos-eventos-1.jpg", alt="")
            .resultados__texto
              h2.resultados__titulo
                a(href="#") NOMBRE DEL CURSO
              p.resultados__descripcion Breve descripción de los objetivos y contenido del curso    
          .resultados__boton
            a(href="#") LEER MÁS
    
      .resultados__paginacion.d-flex.justify-content-center.my-3
        nav(aria-label='Paginacion')
            ul.pagination
              li.page-item
                a.page-link(href='#', aria-label='Prev')
                  span(aria-hidden='true') «
                  span.sr-only Prev
              li.page-item
                a.page-link(href='#') 1
              li.page-item
                a.page-link(href='#') 2
              li.page-item
                a.page-link(href='#') 3
              li.page-item
                a.page-link(href='#', aria-label='Next')
                  span(aria-hidden='true') »
                  span.sr-only Next
