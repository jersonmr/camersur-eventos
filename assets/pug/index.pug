extends partials/layout

block content

    .container
        .row
            .col-12.col-md-8.col-lg-9
                // Listado de eventos
                include partials/_eventos

            .col-12.col-md-4.col-lg-3
                // Sidebar (calendario | Buscador | Publicidad)
                include partials/_sidebar-proximos

        // Banner TDG
        .row
            .hidden-xs-down.col-sm-12.text-center
                section
                    a(href="http://www.camersur.com", target="_blank")
                        img(src="images/Banner5.png", alt="Banner publicitario Camersur", class='img-fluid')

        .row
            .col-12.col-md-8.col-lg-9
                // Carousel de videos
                include partials/_videos

                // Eventos destacados
                include partials/_destacados

            .col-12.col-md-4.col-lg-3
                // Sidebar destacados
                include partials/_sidebar-destacados