// Calendario
section.calendario
    button.calendario__boton(type="button")
        a(href="#")
            i.fa.i.fa.fa-calendar
            h4 Próximos Eventos

// Buscador de Eventos
section.buscador
    h4.buscador__titulo BUSCADOR DE EVENTOS
    .buscador__bloque
        form.buscador__form
            input.form-control(type="text", placeholder="PALABRA CLAVE")
            input.form-control(type="text", placeholder="ORGANIZADOR")
            select.form-control
                option(selected="selected") CATEGORÍA

            button.buscador__boton(type="button") Buscar

